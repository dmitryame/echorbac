<h1>Listing subjects</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for subject in @subjects %>
  <tr>
    <td><%= link_to((h subject.name) , client_subject_path(@client, subject)) %></td>
    <td><%= link_to image_tag("trash.png", :border => 0, :width => 16, :height => 16), client_subject_path(@client, subject), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to image_tag("back.png", :border => 0, :width => 16, :height => 16), client_path(@client) %>
<%= link_to image_tag("add.png", :border => 0, :width => 16, :height => 16), new_client_subject_path(@client) %>
