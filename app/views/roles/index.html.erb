<h1>Listing roles</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for role in @roles %>
  <tr>
    <td><%= link_to((h role.name), client_role_path(@client, role)) %></td>
    <td><%= link_to image_tag("edit.png", :border => 0, :width => 16, :height => 16), edit_client_role_path(@client, role) %></td>
    <td><%= link_to image_tag("trash.png", :border => 0, :width => 16, :height => 16), client_role_path(@client, role), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to image_tag("back.png", :border => 0, :width => 16, :height => 16), client_path(@client) %>
<%= link_to image_tag("add.png", :border => 0, :width => 16, :height => 16), new_client_role_path(@client) %>
